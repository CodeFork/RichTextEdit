    	<CheckBox Click="CHK_ReadOnly_Click" Height="26.403" HorizontalAlignment="Left" Margin="85,0,0,228.59700012207" VerticalAlignment="Bottom" Width="81" Content="ReadOnly" d:LayoutOverrides="Height" x:Name="CHK_ReadOnly"/>
